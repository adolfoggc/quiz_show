<p id="notice"><%= notice %></p>

<p>
  <strong>Statement:</strong>
  <%= @question.statement %>
</p>

<p>
  <strong>Real answer:</strong>
  <%= @question.real_answer %>
</p>

<p>
  <strong>Fake answer:</strong>
  <%= @question.fake_answer %>
</p>
<% if @fake_answers.count > 0 %>
  <% @fake_answers.each do |fa| %>
    <p>
      <strong>Fake answer:</strong>
      <%= fa.answer %>
    </p>
  <% end %>
<% end %>
<%= link_to 'New Fake Answer', new_fake_answer_path(@quiz,@question) %> |
<%= link_to 'Editar enunciado, resposta verdadeira ou primeira resposta falsa', edit_question_path(@question) %> |
<%= link_to 'Back', quizzes_path %>
