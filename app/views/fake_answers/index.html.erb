<p id="notice"><%= notice %></p>

<h1>Fake Answers</h1>

<table>
  <thead>
    <tr>
      <th>Answer</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fake_answers.each do |fake_answer| %>
      <tr>
        <td><%= fake_answer.answer %></td>
        <td><%= fake_answer.question %></td>
        <td><%= link_to 'Show', fake_answer %></td>
        <td><%= link_to 'Edit', edit_fake_answer_path(fake_answer) %></td>
        <td><%= link_to 'Destroy', fake_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fake Answer', new_fake_answer_path %>
